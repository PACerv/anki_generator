# Environment variables for Anki Card Creator
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Authentication credentials (for protected deployments)
USERNAME=your_username_here
PASSWORD=your_password_here

# Application configuration (for Docker deployment)
HOST=0.0.0.0
PORT=7860
ENVIRONMENT=production

# Optional: Customize the model
GEMINI_MODEL=gemini-1.5-flash

# Optional: Set custom temperature for AI responses
GEMINI_TEMPERATURE=0.3

# Optional: Set log level
LOG_LEVEL=INFO
